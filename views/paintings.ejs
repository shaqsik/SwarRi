<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div id="container" class="container">

        <%- include('./partials/sidebar.ejs') %>
        <div id="main" class="main" style="background-color: antiquewhite;">
            <!-- <div class="blogs_content"> -->
                <h1 style="color: #5f94bd;font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                display: flex;justify-content: center;align-items: center;">Paintings Section</h1>
                <div class="blogs_content_images">
                  <% items.forEach(function(image) { %>
                    <a class="single" href="/paintings/<%= image._id%>">
                    <div class="eachbox">
                        <div  style="width: fit-content;">
                        <img style="width: 300px;height: 300px; border-radius: 23px;"
                            src="data:image/<%=image.img.contentType%>;base64,
                                    <%=image.img.data.toString('base64')%>"
                        />
                        <div >
                            <h5 style="color: white;font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;"><%= image.name %></h5>
                            <p style="color: white;font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;"><%= image.desc %></p>
                        </div>
                        </div>
                    </div>
                    </a>
                    <% }) %>
                    </div>
            
            
            <!-- </div> -->
    </div>

    </div>
    
    <%- include('./partials/footer.ejs') %>

    <script src="js/script.js"></script>
</body>
</html>