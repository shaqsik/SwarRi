<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div id="container" class="container">

        <%- include('./partials/sidebar.ejs') %>
        <div id="main" class="main" style="background-color: antiquewhite;">
            
            <% if (image && image.img) { %>
            <div class="eachbox">
                <div  style="width: fit-content;">
                    <img style="width: 300px;height: 300px;;"
                        src="data:image/<%=image.img.contentType%>;base64,
                                <%=image.img.data.toString('base64')%>"
                    />
                    <div >
                    <h5 style="color: white;font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;"><%= image.name %></h5>
                        <p style="color: white;font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;"><%= image.desc %></p>
                    </div>
                    <div><a class="delete" data-doc="<%= image._id%>">Delete</a></div>
                </div>
            </div>
            <% } else { %>
                <p>Image not available</p>
            <% } %>

            
            
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>

    <script src="/js/script2.js"></script>
</body>
</html>